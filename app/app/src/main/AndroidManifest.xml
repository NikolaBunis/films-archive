<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="filmsarchive.thingcinema.com.filmsarchiveapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.HomePage.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MovieArchive.MovieArchiveActivity" />
        <activity android:name=".views.MovieArchive.AdditionFormActivity" />
        <activity android:name=".views.MovieArchive.DeletionFormActivity" />
        <activity android:name=".views.MovieArchive.MovieInfoActivity"></activity>
    </application>

</manifest>